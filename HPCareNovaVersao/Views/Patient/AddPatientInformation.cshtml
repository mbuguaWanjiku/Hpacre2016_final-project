                <select id="allergiesLvl1"
                        class="form-control"
                        name="allergiesDropdown1"
                        ng-model="AllergyCategories"
                        ng-options="cg as cg.AllergyCategoryName for cg in allergiesLvl1"
                        ng-change="processLevel2A()">
