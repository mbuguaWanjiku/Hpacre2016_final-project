            </div>

        </div>
        <div class="col-md-1"></div>
        <div class="well col-md-8" ng-controller="PatientAllergiesController">

            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Allergy</th>
                        <th>Start Date</th>
                    </tr>
                </thead>
                <tbody>
                    <tr ng-repeat="ViewModelAllergy in listAllergyVm track by $index">
                        <td> {{ViewModelAllergy.AllergyName}}</td>
                        <td>{{ViewModelAllergy.StartDate}}</td>
                        <td>
                            <span ng-click="deleteAllergy(ViewModelAllergy)" class="glyphicon glyphicon-trash" style="color:blue"></span>
                        </td>
                    </tr>
                </tbody>
            </table>
            <button type="submit" class="btn btn-primary" ng-click="saveAllergy()">Save</button>
        </div>
        <div class="col-md-1"></div>
    </div>

</div>


