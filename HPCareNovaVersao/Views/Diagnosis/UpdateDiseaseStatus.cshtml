<div class="col-md-1"></div>
<div class="panel panel-widget col-md-10">
    <ul class="nofitications-dropdown pull-right" style="margin-top:-4%;margin-right:-3%;">

        <li class="dropdown head-dpdn">
            <a class="dropdown-toggle" data-toggle="dropdown" aria-expanded="false"><i class="fa fa-question-circle-o"></i></a>
            <ul class="dropdown-menu anti-dropdown-menu">
                <li>
                    <div class="notification_header">
                        <h3>Search Patient</h3>
                    </div>
                </li>
                <li>
                    <a href="#">
                        <div class="task-info" ng-controller="HelpController">
                            <span class="task-desc">{{helpUpdateDiseaseStatus}}</span>
                            <div class="clearfix"></div>
                        </div>
                    </a>
                </li>
            </ul>
        </li>
    </ul>
    <div class="progressbar-heading grids-heading">
        <h2>Update Disease Status</h2>
    </div>

    <div class="col-md-12">
        <div class="selected dropDownOptions" ng-app="myApp" ng-controller="DiagnosisHistoryController">

            <table class="table table-hover">
                <caption>Patient active diseases</caption>
                <thead>
                    <tr>
                        <th>Start Date</th>
                        <th>Is active</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    <tr ng-repeat="disease in diseases">

                        <td>
                            {{disease.Disease_start_date | jsonDate :'dd-M-yyyy H:mm'}}
                        </td>
                        <td>
                            {{disease.Disease_is_active}}
                        </td>

                        <td>
                            <span ng-click="DeactivateDisease(disease)" class="btnRed">Deactivate</span>
                        </td>

                    </tr>
                </tbody>
            </table>

        </div>

    </div>
</div>

<div class="col-md-1"></div>
