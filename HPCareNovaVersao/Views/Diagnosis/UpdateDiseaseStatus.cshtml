<div class="panel panel-widget col-md-10">*@
    <div class="progressbar-heading grids-heading">
        <h2>Statistics</h2>
    </div>

    <div class="well col-md-12">
        <div class="selected dropDownOptions" ng-app="myApp" ng-controller="DiagnosisHistoryController">

            <table class="table table-hover">
                <caption>Patient active diseases</caption>
                <thead>
                    <tr>
                        <th>Start Date</th>
                        <th>Is active</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    <tr ng-repeat="disease in diseases">

                        <td>
                            {{disease.Disease_start_date | jsonDate :'dd-M-yyyy H:mm'}}
                        </td>
                        <td>
                            {{disease.Disease_is_active}}
                        </td>

                        <td>
                            <span ng-click="DeactivateDisease(disease)" class="btnRed">Deactivate</span>
                        </td>

                    </tr>
                </tbody>
            </table>

        </div>

    </div>
