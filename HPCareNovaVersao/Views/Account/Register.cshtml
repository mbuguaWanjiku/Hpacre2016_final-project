@model PresentationLayer.Models.RegisterViewModel
@{Layout = "~/Views/Shared/_LayoutLogin.cshtml";}
@{
    ViewBag.Title = "Register";
}

<div class="login-body">
    <div class="login-heading">
        <h1>Sign up</h1>
    </div>

    @using (Html.BeginForm("Register", "Account", new {
        ReturnUrl = ViewBag.ReturnUrl
    }, FormMethod.Post, new {
        @class = "login-info",
        role = "form"
    })) {
        @Html.AntiForgeryToken()

        @Html.TextBoxFor(m => m.Email, new {
       @class = "user",
       placeholder = "Email",
       required = "",
       name = "email"
   })
        @Html.ValidationMessageFor(m => m.Email, "", new {
       @class = "text-danger"
   })

        @Html.TextBoxFor(m => m.UserName, new {
       @class = "user",
       placeholder = "Name",
       required = "",
       name = "email"
   })
        @Html.ValidationMessageFor(m => m.UserName, "", new {
       @class = "text-danger"
   })

        @Html.PasswordFor(m => m.Password, new {
       @class = "ock",
       placeholder = "Password",
       name = "password"
   })
        @Html.ValidationMessageFor(m => m.Password, "", new {
       @class = "text-danger"
   })

        @Html.PasswordFor(m => m.ConfirmPassword, new {
       @class = "user",
       placeholder = "Confirm Password",
       name = "password"
   })
        @Html.ValidationMessageFor(m => m.Email, "", new {
       @class = "text-danger"
   })

        @Html.Label("User Role", new {
       @class = "user"
   })
        @Html.DropDownList("UserRoles", (SelectList) ViewBag.Name, " ")

        <input type="submit" name="Sign In" value="Register">
    }

</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}



